<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SiggaBlog.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:SiggaBlog.Domain.Entities;assembly=SiggaBlog.Domain"
    xmlns:viewmodel="clr-namespace:SiggaBlog.ViewModels"
    Title="{Binding Title}"
    x:DataType="viewmodel:MainPageViewModel">

    <Grid Padding="20" RowDefinitions="Auto,*">
        <Label
            Grid.Row="0"
            Margin="0,0,0,10"
            FontAttributes="Bold"
            FontSize="24"
            Text="Posts"
            TextColor="#212121" />

        <RefreshView
            Grid.Row="1"
            Command="{Binding RefreshCommand}"
            IsRefreshing="{Binding IsRefreshing}">
            <CollectionView
                EmptyView="Sem postagens avaliadas"
                ItemsSource="{Binding Posts}"
                SelectionChangedCommand="{Binding SelectPostCommand}"
                SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}"
                SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Post">
                        <Border
                            Margin="0,0,0,10"
                            Padding="15"
                            BackgroundColor="White"
                            Stroke="#E0E0E0"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Grid
                                ColumnDefinitions="Auto,*"
                                RowDefinitions="Auto,Auto"
                                RowSpacing="5">
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    FontSize="12"
                                    Text="{Binding Id}"
                                    TextColor="#9E9E9E" />
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    LineBreakMode="TailTruncation"
                                    Text="{Binding Title}"
                                    TextColor="#212121" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    FontSize="14"
                                    LineBreakMode="TailTruncation"
                                    MaxLines="2"
                                    Text="{Binding Body}"
                                    TextColor="#616161" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>

</ContentPage>
