<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:SiggaBlog.ViewModels"
             xmlns:model="clr-namespace:SiggaBlog.Domain.Entities;assembly=SiggaBlog.Domain"
             x:Class="SiggaBlog.Views.MainPage"
             x:DataType="viewmodel:MainPageViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*" Padding="20">
        <Label Text="Posts"
               Grid.Row="0"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="#212121"
               Margin="0,0,0,10"/>

        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Posts}"
                          EmptyView="No posts available">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Post">
                        <Border Margin="0,0,0,10"
                                Padding="15"
                                Stroke="#E0E0E0"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 10"
                                BackgroundColor="White">
                            <Grid RowDefinitions="Auto,Auto"
                                  ColumnDefinitions="Auto,*"
                                  RowSpacing="5">
                                <Label Text="{Binding Id}"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       FontSize="12"
                                       TextColor="#9E9E9E"
                                       Margin="0,0,10,0"/>
                                <Label Text="{Binding Title}"
                                       Grid.Row="0"
                                       Grid.Column="1"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#212121"
                                       LineBreakMode="TailTruncation"/>
                                <Label Text="{Binding Body}"
                                       Grid.Row="1"
                                       Grid.Column="1"
                                       FontSize="14"
                                       TextColor="#616161"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>

</ContentPage>
