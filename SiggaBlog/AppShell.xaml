<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SiggaBlog.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SiggaBlog.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Posts"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Post Detail"
        ContentTemplate="{DataTemplate views:PostDetailPage}"
        Route="PostDetail" />

</Shell>
